                    <td class="font-mono text-sm"><%= item.item_number || "‚Äî" %></td>
                    <td>
                      <div class="text-sm"><%= truncate(item.item_description, length: 60) %></div>
                      <% if item.notes %>
                        <div class="text-xs text-gray-500 mt-1"><%= item.notes %></div>
