  <script>
    async function refreshBoqItems() {
      const btn = document.getElementById('refresh-items-btn');
      const originalHTML = btn.innerHTML;
      
      // Show loading state
      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Loading...';
      
      try {
        const boqId = window.location.pathname.split('/').pop();
        const response = await fetch(`/boqs/${boqId}.json`);
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const data = await response.json();
        const items = data.boq_items || [];
        
        // Update count badge
        document.getElementById('items-count').textContent = items.length;
        
        if (items.length === 0) {
          // Show empty state
          document.getElementById('items-container').innerHTML = `
            <div id="empty-state" class="alert alert-info">
              <i class="fas fa-info-circle"></i>
              <div>No line items yet. Parse the BOQ to extract items.</div>
            </div>
          `;
        } else {
          // Build table HTML
          let tableHTML = `
            <div class="overflow-x-auto">
              <table class="table table-sm w-full">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Item Number</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>UOM</th>
                    <th>Quantity</th>
                  </tr>
                </thead>
                <tbody id="items-tbody">
          `;
          
          items.forEach((item, idx) => {
            const notes = item.notes ? `<div class="text-xs text-gray-500 mt-1">${item.notes}</div>` : '';
            tableHTML += `
              <tr>
                <td>${idx + 1}</td>
                <td class="font-mono text-sm">${item.item_number || "‚Äî"}</td>
                <td>
                  <div class="text-sm">${item.item_description ? item.item_description.substring(0, 60) : "‚Äî"}</div>
                  ${notes}
                </td>
                <td><span class="badge badge-sm">${item.section_category || "‚Äî"}</span></td>
                <td>${item.unit_of_measure || "‚Äî"}</td>
                <td class="text-right font-semibold">${item.quantity || "‚Äî"}</td>
              </tr>
            `;
          });
          
          tableHTML += `
                </tbody>
              </table>
            </div>
          `;
          
          document.getElementById('items-container').innerHTML = tableHTML;
        }
        
        // Show success toast
        showToast(`Loaded ${items.length} line items`, 'success');
      } catch (error) {
        console.error('Error refreshing items:', error);
        showToast('Failed to refresh items', 'error');
      } finally {
        // Restore button
        btn.disabled = false;
        btn.innerHTML = originalHTML;
      }
    }
  </script>
</div>

<script type="module">
