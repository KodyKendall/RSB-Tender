<script>
document.addEventListener('DOMContentLoaded', async function() {
  try {
    // Fetch dashboard data from API
    const response = await fetch('/api/dashboard_metrics', {
      headers: {
        'Accept': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]')?.content || ''
      }
    });

    if (!response.ok) {
      console.warn('Dashboard metrics endpoint not available, showing placeholder data');
      populatePlaceholderMetrics();
      return;
    }

    const data = await response.json();
    populateMetrics(data);
  } catch (error) {
    console.error('Error loading dashboard metrics:', error);
    populatePlaceholderMetrics();
  }

  function populateMetrics(data) {
    // Update Tenders
    document.getElementById('tender-count').textContent = data.total_tenders || 0;
    const draftTenders = data.draft_tenders || 0;
    document.getElementById('tender-status').textContent = draftTenders > 0 ? `${draftTenders} draft` : 'All active';

    // Update Projects
    document.getElementById('project-count').textContent = data.active_projects || 0;
    const inactiveProjects = data.inactive_projects || 0;
    document.getElementById('project-status').textContent = inactiveProjects > 0 ? `${inactiveProjects} inactive` : 'All active';

    // Update Claims
    document.getElementById('claim-count').textContent = data.pending_claims || 0;
    const approvedClaims = data.approved_claims || 0;
    document.getElementById('claim-status').textContent = approvedClaims > 0 ? `${approvedClaims} approved` : 'No approved';

    // Update Budget
    const budgetTotal = parseFloat(data.total_budget || 0);
    const budgetSpent = parseFloat(data.total_spent || 0);
    document.getElementById('budget-total').textContent = '$' + budgetTotal.toLocaleString('en-US', {maximumFractionDigits: 0});
    
    const budgetPercent = budgetTotal > 0 ? Math.round((budgetSpent / budgetTotal) * 100) : 0;
    document.getElementById('budget-status').textContent = `${budgetPercent}% spent`;

    // Show Risk Alerts if any exist
    if (data.alerts && data.alerts.length > 0) {
      displayAlerts(data.alerts);
    }
  }

  function populatePlaceholderMetrics() {
    // Show placeholder data when API is not available
    document.getElementById('tender-count').textContent = '‚Äî';
    document.getElementById('tender-status').textContent = 'No data';
    
    document.getElementById('project-count').textContent = '‚Äî';
    document.getElementById('project-status').textContent = 'No data';
    
    document.getElementById('claim-count').textContent = '‚Äî';
    document.getElementById('claim-status').textContent = 'No data';
    
    document.getElementById('budget-total').textContent = '$‚Äî';
    document.getElementById('budget-status').textContent = 'No data';
  }

  function displayAlerts(alerts) {
    const alertsSection = document.getElementById('alerts-section');
    const alertsContainer = document.getElementById('alerts-container');
    
    if (alerts.length === 0) return;
    
    alertsContainer.innerHTML = alerts.map(alert => `
      <div class="alert alert-${alert.type === 'danger' ? 'error' : 'warning'} shadow-lg border-l-4">
        <div class="flex items-start gap-4">
          <i class="fas fa-exclamation-triangle text-xl flex-shrink-0 mt-1"></i>
          <div class="flex-1">
            <h3 class="font-bold">${alert.title}</h3>
            <p class="text-sm">${alert.message}</p>
          </div>
          <a href="${alert.link}" class="btn btn-sm btn-ghost">View</a>
        </div>
      </div>
    `).join('');
    
    alertsSection.style.display = 'block';
  }
});
</script>
