  </div>

  <div class="my-5">
    <%= form.label :project_start_date %>
    <%= form.date_field :project_start_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": project.errors[:project_start_date].none?, "border-red-400 focus:outline-red-600": project.errors[:project_start_date].any?}] %>
