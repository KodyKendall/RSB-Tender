<% content_for :title, "Monthly material supply rates" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center gap-3 flex-wrap">
    <h1 class="font-bold text-4xl">Monthly material supply rates</h1>
    <div class="flex gap-2">
      <%= link_to "Create Material Supplies for this Month", new_monthly_material_supply_rate_path, class: "rounded-md px-3.5 py-2.5 bg-green-600 hover:bg-green-500 text-white block font-medium" %>
      <%= link_to "New Rate Set", new_monthly_material_supply_rate_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    </div>
  </div>

  <div id="monthly_material_supply_rates" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @monthly_material_supply_rates.any? %>
      <% @monthly_material_supply_rates.each do |monthly_material_supply_rate| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render monthly_material_supply_rate %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", monthly_material_supply_rate, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_monthly_material_supply_rate_path(monthly_material_supply_rate), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", monthly_material_supply_rate, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No monthly material supply rates found.</p>
    <% end %>
  </div>
</div>
